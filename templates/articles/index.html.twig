{% extends 'base.html.twig'%}
{% block title %} liste des articles{% endblock %}
{% block body %}
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
            <tr>
                <th>title</th>
                <th>content</th>
                <th>image</th>
                <th>createdAt</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content }}</td>
                    <td>{{ article.image }}</td>
                    <td>{{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }}</td>

                    <td>
                        <a href="/article/{{ article.id }}" class="btn btn-dark">Détails</a>
                    </td>
                    <td>
                        <a href="/article/edit/{{ article.id }}" class="btn btn-dark">Modifier</a>
                    </td>
                    <td>
                        <a href="/article/delete/{{ article.id }}" class="btn btn-danger"
                           onclick="return confirm('Etes vous sûr de supprimer cet article?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun Article</p>
    {% endif %}


{% endblock %}